<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eGrowFrontendMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <img src="https://i.ibb.co/cYSrW3M/e-Grow-Logotip.png" alt="e-Grow-Logotip" border="0" width="150" height="88" />
            <div style="margin-left: 12%; font-family: 'Century Gothic'; font-size: 20px; text-transform: uppercase" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    @*<li class="nav-item" id="loginElement">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
        </li>
        <li class="nav-item" id="registracijaElement">
            <a class="nav-link text-dark" asp-area="" asp-controller="Registration" asp-action="Registration">Registration</a>
        </li>
        <li class="nav-item" id="devicesElement">
            <a class="nav-link text-dark" asp-controller="/devices">Naprave</a>
        </li>
        <li class="nav-item" id="rastlineElement">
            <a class="nav-link text-dark" asp-controller="/rastline">Rastline</a>
        </li>
        <li class="nav-item" id="odjavaElement">
            <a class="nav-link text-dark" asp-area="">Odjava</a>
        </li>*@

                    @{
                        @using Microsoft.AspNetCore.Http;
                        if (Context.Request.Cookies["userId"] == null)
                        {
                            <li class="nav-item" id="loginElement">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item" id="registracijaElement">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Registration" asp-action="Registration">Registration</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" id="devicesElement">
                                <a class="nav-link text-dark" asp-controller="Devices" asp-action="Index">Naprave</a>
                            </li>
                            <li class="nav-item" id="rastlineElement">
                                <a class="nav-link text-dark" asp-controller="Rastline" asp-action="Index">Rastline</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="DeviceRegistration" asp-action="Index">Dodajanje nove naprave</a>
                            </li>

                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item text-dark">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="GetUser" asp-action="GetUser">@Context.Session.GetString("username")</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Odjava">Odjava</a>
                                </li>
                            </ul>
                        }
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer style="background-color: #CAD7A0" class="border-top footer text-muted">
        <div class="container">
            &copy;  2022 - &hearts; RIS skupina je elitnejsa od tiste druge &hearts;  - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
