@model EGrowFrontendMVC.Models.UserResponse

@{
    ViewData["Title"] = "Registration";
}

<body style="background-image: url('https://cdn.discordapp.com/attachments/951048725617315860/951108974671962133/RegisterPageLogoPlusBackground.png') ">
    <h1 style="text-align: center; color: #204108; font-size: 35px; font-weight: bold; text-transform: uppercase; margin-top: 17%; font-family: 'Century Gothic'">Registracija</h1>

    <div class="row" style="margin-left: 33%; font-family: 'Century Gothic'; margin-top: 20px">
        <div class="col-md-4">
            <form asp-action="Registration">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label style="text-transform:capitalize; font-size: 20px" asp-for="username" class="control-label"></label>
                    <input style="width: 350px" asp-for="username" class="form-control" />
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="text-transform:capitalize; font-size: 20px" asp-for="password" class="control-label"></label>
                    <input style="width: 350px" asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div style="width: 350px; text-align: end" class="form-group">
                    <input style="background-color: #204108; border-color:transparent; font-weight: bold; text-transform:uppercase" type="submit" value="Registracija" class="btn btn-primary" />
                </div>
            </form>
            <hr style="width:350px" />
            <div style="width:350px">
                <p style="text-align: center; font-size: 14px;">Že imate uporabniški račun? <a style="text-decoration: underline; color: #8d6029" asp-controller="Login" asp-action="Login">PRIJAVA</a></p>
            </div>
        </div>
    </div>

    <!--<div>
        <a asp-action="Index">Back to List</a>
    </div>-->
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
